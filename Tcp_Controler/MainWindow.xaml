<Window x:Class="Tcp_Controler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tcp_Controler"
        mc:Ignorable="d"
        Title="Tcp controller" Height="350" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="ButtonLeft_Click" Width="100" Height="40" Content="LEFT" Margin="10"/>
			<Button Click="ButtonRight_Click" Width="100" Height="40" Content="RIGHT" Margin="10"/>
            <Button Click="ButtonUp_Click" Width="100" Height="40" Content="UP" Margin="10"/>
            <Button Click="ButtonDown_Click" Width="100" Height="40" Content="DOWN" Margin="10"/>
        </StackPanel>

        <Button Width="100" Height="20" Margin="10" HorizontalAlignment="Left"
                VerticalAlignment="Bottom" Content="CONNECT" Click="ButtonConnect_Click"/>
    </Grid>
</Window>
